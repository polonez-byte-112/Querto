<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_wall"
    tools:context=".fragments.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailsLogoBg"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:elevation="3dp"
            android:src="@drawable/company_logo_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/detailsLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/company_logo"
            app:layout_constraintBottom_toBottomOf="@+id/detailsLogoBg"
            app:layout_constraintEnd_toEndOf="@+id/detailsLogoBg"
            app:layout_constraintHorizontal_bias="0.0"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="@+id/detailsLogoBg"
            app:layout_constraintTop_toTopOf="@+id/detailsLogoBg" />

        <TextView
            android:id="@+id/detailsTextBox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/details_box_bg"
            android:text="TextView"
            android:elevation="3dp"
            android:textColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsLogoBg" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="3dp"
            android:fontFamily="@font/amatic_sc"
            android:gravity="center_horizontal"
            android:text="Rzeszów"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/detailsLogoBg" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amatic_sc"
            android:elevation="3dp"
            android:text="Osmeckiego 14A"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/amatic_sc"
            android:text="Łukasiewicza 43B"
            android:elevation="3dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amatic_sc"
            android:text="TEL. 720 844 990"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="TEL. 720 844 990"
            android:elevation="3dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/amatic_sc"
            app:layout_constraintStart_toStartOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/amatic_sc"
            android:text="TEL. 720 844 990"
            android:textColor="#FFFFFF"
            android:elevation="3dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="TEL. 720 844 990"
            android:textSize="18sp"
            android:fontFamily="@font/amatic_sc"
            android:elevation="3dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/detailsTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/detailsHoursBox"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:elevation="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/details_phone_bg"

            android:text="TextView"
            android:textColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsTextBox" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:elevation="3dp"
            android:fontFamily="@font/amatic_sc"
            android:gravity="center_horizontal"
            android:text="Godziny Otwarcia"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/detailsHoursBox"
            app:layout_constraintStart_toStartOf="@+id/detailsHoursBox"
            app:layout_constraintTop_toTopOf="@+id/detailsHoursBox" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:elevation="3dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/amatic_sc"
            android:gravity="center_horizontal"
            android:text="Poniedziałek-Czwartek: 13:00 - 21:00\nPiątek-Sobota: 13:00 - 23:00\nNiedziela: 13:00 - 21:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/detailsHoursBox"
            app:layout_constraintEnd_toEndOf="@+id/detailsHoursBox"
            app:layout_constraintStart_toStartOf="@+id/detailsHoursBox"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>